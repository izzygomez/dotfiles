[user]
	name = Izzy Gomez
	email = izzy@izzygomez.com
	signingkey = 328FBD3D37A45C47

[core]
	editor = emacs
	# Setting the `git-delta` package [1] to be default pager, since has
	# some nicer features than less. If it's not installed, log a message
	# to stdout (`echo ...`) & fallback to using `less`
	# [1] https://github.com/dandavison/delta
	pager = sh -c "delta 2>/dev/null || { echo '~/.gitconfig: delta is not installed, falling back to using less.'; less; }"
	# Global gitignore file
	excludesFile = ~/.gitignore-global

[push]
	autoSetupRemote = true
	verifySignatures = true

[pull]
	ff = only

[fetch]
	prune = true

[commit]
	gpgsign = true

[init]
	defaultBranch = main

[merge]
	# slightly more modern merge conflict style
	conflictStyle = zdiff3

# config for interactive commands, e.g. `git add -p`, `git stash -p`, etc
[interactive]
	# Similar fallback mechanisms as above, except we can't log anything in
	# `diffFilter`, so can't do a `sh` wrapper with a custom `echo` log.
	diffFilter = delta --color-only || cat

# `git-delta` specific config
[delta]
	# side by side diff mode
	# side-by-side = true
	# line-numbers = true is assumed if side-by-side = true, but setting
	# this explicitly in case I decide to toggle side-by-side off
	line-numbers = true
	# theme & color overrides
	dark = true
	file-style = bright-cyan bold
	# under the hood, `delta` still uses `less`. this makes it so that
	# delta always shows up in a separate pager even if the diff is small.
	pager = less -R
